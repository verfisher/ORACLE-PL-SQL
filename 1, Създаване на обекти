CREATE TABLE systems (
    system_id   NUMBER PRIMARY KEY,
    system_name VARCHAR2(100)
);

INSERT INTO systems VALUES (1, 'Система 1');
INSERT INTO systems VALUES (2, 'Система 2');
INSERT INTO systems VALUES (3, 'Система 3');

CREATE TABLE roles (
    role_id     NUMBER PRIMARY KEY,
    role_name   VARCHAR2(100),
    system_id   NUMBER REFERENCES systems(system_id)
);

INSERT INTO roles VALUES (1, 'Роля 1', 1);
