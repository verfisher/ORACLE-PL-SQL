INSERT INTO roles VALUES (4, 'Роля 1', 3);
INSERT INTO roles VALUES (5, 'Роля 2', 3);
INSERT INTO roles VALUES (6, 'Роля 3', 3);



CREATE TABLE user_roles (
    user_id     NUMBER REFERENCES users(user_id),
    role_id     NUMBER REFERENCES roles(role_id)
);

